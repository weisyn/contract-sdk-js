{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["jest", "node"],
    // 测试代码中允许存在未使用的变量/参数，避免 TS6133 影响用例执行
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "tests/**/*",
    // 显式包含 AssemblyScript 兼容声明，让测试环境也能识别 u32/u64/bool 等类型
    "src/as-compat.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}

