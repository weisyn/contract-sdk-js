  "codePreview": "export class GovernanceTokenContract extends Contract {\n  private mint(params: Uint8Array): ErrorCode {\n    const to = this.parseAddress(toStr);\n    return Token.mint(to, amount, this.tokenID);\n  }\n  \n  private voteWithTokens(params: Uint8Array): ErrorCode {\n    const votingPower = HostABI.queryUTXOBalance(caller, this.tokenID);\n    return Governance.vote(caller, proposalID, support);\n  }\n}",
