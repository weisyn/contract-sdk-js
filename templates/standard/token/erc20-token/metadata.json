        },
        {
          "name": "amount",
          "type": "number",
          "required": true,
          "description": "授权数量"
        }
      ],
      "returnType": "number",
      "description": "授权其他地址使用代币",
      "isReferenceOnly": false
    },
    {
      "name": "Freeze",
      "type": "write",
      "parameters": [
        {
          "name": "target",
          "type": "address",
          "required": true,
          "description": "目标地址"
        },
        {
          "name": "amount",
          "type": "number",
