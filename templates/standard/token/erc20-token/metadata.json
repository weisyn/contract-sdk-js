  "version": "1.0.0",
  "author": "WES Contract SDK Team",
  "license": "MIT",
  "language": "typescript",
  "level": "standard",
  "helpers": [
    "token"
  ],
  "methods": [
    {
      "name": "Initialize",
      "type": "write",
      "parameters": [],
