      "description": "初始化合约",
      "isReferenceOnly": false
    },
    {
      "name": "Transfer",
      "type": "write",
      "parameters": [
        {
          "name": "to",
          "type": "address",
          "required": true,
          "description": "接收者地址"
        },
        {
          "name": "amount",
          "type": "number",
          "required": true,
          "description": "代币数量"
        }
      ],
      "returnType": "number",
      "description": "转账代币",
      "isReferenceOnly": false
    },
    {
      "name": "Mint",
      "type": "write",
      "parameters": [
        {
          "name": "to",
          "type": "address",
          "required": true,
          "description": "接收者地址"
        },
        {
          "name": "amount",
          "type": "number",
          "required": true,
          "description": "铸造数量"
        }
      ],
      "returnType": "number",
      "description": "铸造新代币",
      "isReferenceOnly": false
    },
    {
      "name": "Burn",
      "type": "write",
      "parameters": [
        {
          "name": "amount",
          "type": "number",
          "required": true,
          "description": "销毁数量"
        }
      ],
      "returnType": "number",
      "description": "销毁代币",
      "isReferenceOnly": false
    },
    {
      "name": "Approve",
      "type": "write",
      "parameters": [
        {
          "name": "spender",
