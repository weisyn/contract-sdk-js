  "tags": [
    "standard",
    "token",
    "erc20",
    "production"
  ],
  "parameters": [
    {
      "name": "to",
      "type": "address",
      "required": true,
      "description": "接收者地址（Transfer/Mint）"
    },
    {
      "name": "amount",
      "type": "number",
      "required": true,
      "description": "代币数量"
    },
    {
      "name": "spender",
      "type": "address",
      "required": true,
      "description": "被授权地址（Approve）"
    },
    {
      "name": "target",
      "type": "address",
      "required": true,
      "description": "目标地址（Freeze）"
    }
  ],
  "risks": [
    "需要实现权限控制（Mint/Freeze）",
    "需要验证所有输入参数",
    "需要确保余额检查逻辑正确"
  ],
  "prerequisites": [
    "完成 Simple Token 学习模板",
    "了解 ERC-20 标准",
    "了解代币安全最佳实践"
  ],
  "examples": [
    "wes contract call <contract_address> --function Transfer --params '{\"to\":\"<address>\",\"amount\":100}'",
    "wes contract call <contract_address> --function Mint --params '{\"to\":\"<address>\",\"amount\":1000}'",
    "wes contract call <contract_address> --function Approve --params '{\"spender\":\"<address>\",\"amount\":1000}'"
  ],
  "codePreview": "const result = Token.transfer(caller, to, amount, tokenID);\nif (result !== ErrorCode.SUCCESS) {\n  return result;\n}",
