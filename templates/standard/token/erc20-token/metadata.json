      "isReferenceOnly": false
    },
    {
      "name": "BalanceOf",
      "type": "read",
      "parameters": [
        {
          "name": "address",
          "type": "address",
          "required": false,
          "description": "查询地址（可选，默认查询调用者）"
        }
      ],
      "returnType": "string",
      "description": "查询代币余额",
      "isReferenceOnly": true
    }
  ],
