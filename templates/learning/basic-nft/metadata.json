{
  "id": "basic-nft",
  "name": "Basic NFT",
  "category": "Learning",
  "description": "基础的 NFT 学习模板，展示 NFT 铸造、转移、查询等功能",
  "tags": [
    "learning",
    "beginner",
    "nft",
    "non-fungible-token",
    "digital-asset"
  ],
  "parameters": [],
  "risks": [],
  "prerequisites": [
    "了解 TypeScript/AssemblyScript 基础语法",
    "了解 WES 合约基本概念",
    "完成 hello-world 和 simple-token 学习"
  ],
  "examples": [
    "wes contract deploy contract.wasm --function Initialize",
    "wes contract call <contract_address> --function MintNFT",
    "wes contract call <contract_address> --function TransferNFT",
    "wes contract call <contract_address> --function GetOwner --params '{\"tokenID\":\"NFT_1\"}'"
  ],
  "codePreview": "export function MintNFT(): u32 {\n  const caller = Context.getCaller();\n  const tokenID = `NFT_${nextTokenID}`;\n  const metadata = Uint8Array.wrap(String.UTF8.encode(tokenURI));\n  return NFT.mint(caller, tokenID, metadata);\n}",
  "sourcePath": "contract.ts",
  "version": "1.0.0",
  "author": "WES Contract SDK Team",
  "license": "MIT",
  "language": "typescript",
  "level": "learning",
  "helpers": [
    "nft"
  ],
  "methods": [
    {
      "name": "Initialize",
      "type": "write",
      "parameters": [],
      "returnType": "number",
      "description": "初始化合约",
      "isReferenceOnly": false
    },
    {
      "name": "MintNFT",
      "type": "write",
      "parameters": [
        {
          "name": "to",
          "type": "address",
          "required": true,
          "description": "接收者地址"
        },
        {
          "name": "tokenURI",
          "type": "string",
          "required": true,
          "description": "NFT元数据URI"
        }
      ],
      "returnType": "number",
      "description": "铸造NFT",
      "isReferenceOnly": false
    },
    {
      "name": "TransferNFT",
      "type": "write",
      "parameters": [
        {
          "name": "from",
          "type": "address",
          "required": true,
          "description": "发送者地址"
        },
        {
          "name": "to",
          "type": "address",
          "required": true,
          "description": "接收者地址"
        },
        {
          "name": "tokenID",
          "type": "string",
          "required": true,
          "description": "NFT唯一标识"
        }
      ],
      "returnType": "number",
      "description": "转移NFT所有权",
      "isReferenceOnly": false
    },
    {
      "name": "GetOwner",
      "type": "read",
      "parameters": [
        {
          "name": "tokenID",
          "type": "string",
          "required": true,
          "description": "NFT唯一标识"
        }
      ],
      "returnType": "string",
      "description": "查询NFT所有者",
      "isReferenceOnly": true
    },
    {
      "name": "GetTokenURI",
      "type": "read",
      "parameters": [
        {
          "name": "tokenID",
          "type": "string",
          "required": true,
          "description": "NFT唯一标识"
        }
      ],
      "returnType": "string",
      "description": "获取NFT元数据URI",
      "isReferenceOnly": true
    },
    {
      "name": "GetTotalSupply",
      "type": "read",
      "parameters": [],
      "returnType": "string",
      "description": "查询NFT总发行量",
      "isReferenceOnly": true
    },
    {
      "name": "GetBalance",
      "type": "read",
      "parameters": [
        {
          "name": "owner",
          "type": "address",
          "required": false,
          "description": "所有者地址（可选，默认查询调用者）"
        }
      ],
      "returnType": "string",
      "description": "查询地址拥有的NFT数量",
      "isReferenceOnly": true
    },
    {
      "name": "GetContractInfo",
      "type": "read",
      "parameters": [],
      "returnType": "string",
      "description": "获取合约基本信息",
      "isReferenceOnly": true
    }
  ],
  "sdkCompatibility": {
    "js": ">=0.1.0-alpha <0.2.0"
  },
  "sinceSdk": {
    "js": "0.1.0-alpha"
  }
}
